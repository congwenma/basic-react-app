pipeline {
  agent {
    docker {
      image 'node:14-alpine'
      args '-p 3000:3000'
    }
  }

  stages {
    stage('Prepare the flow') {
      steps {
        echo '*** Hi now we are preparing the flow'
      }
    }

    stage('Building it out') {
      steps {
        sh """
          npm install
          npm run build
        """
      }
    }
  }
}
