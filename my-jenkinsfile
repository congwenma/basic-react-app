pipeline {
    agent { image 'node:9-alpine' }
    stages {
        stage('Build') {
            steps {
                sh 'echo "Hello World"'
                sh '''
                    echo "Multiline shell steps works too"
                    ls -lah
                    pwd
                    whoami
                    uname -a
                    node --version
                '''
            }
        }
    }
}
