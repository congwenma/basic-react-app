// missing docker
// https://stackoverflow.com/questions/64157002/docker-not-found-when-building-image-in-jenkins-pipeline
pipeline {
  agent {
    docker {
      image 'node:14-alpine'
      args '-p 3000:3000'
    }
  }


  stages {
    stage('Prepare the flow') {
      steps {
        echo '*** Hi now we are preparing the flow'
      }
    }

    stage('Building it out') {

      steps {
        sh """
          npm install
          npm run build
        """
      }
    }
  }
}
